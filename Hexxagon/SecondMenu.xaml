<Window x:Class="Hexxagon.SecondMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecondMenu" Height="240" Width="282">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*" />
            <ColumnDefinition Width="223*" />
            <ColumnDefinition Width="24*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="36*" />
            <RowDefinition Height="52*" />
        </Grid.RowDefinitions>
        <Image Name="image1" Grid.Column="1" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Height="75" />
        <Image  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Name="button1" VerticalAlignment="Center" FlowDirection="RightToLeft" />
        <Button Content="משחק חדש"  HorizontalAlignment="Right"  Name="button2"  FlowDirection="RightToLeft" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="2" Click="button2_Click" />
        <Button Content="בחזרה למשחק"  HorizontalAlignment="Left" Name="button3" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="2" Click="button3_Click" />
        <Button Content="תפריט ראשי"  HorizontalAlignment="Center"  Name="button4" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Click="button4_Click" />
    </Grid>
</Window>
