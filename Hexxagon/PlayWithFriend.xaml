<Window x:Class="Hexxagon.PlayWithFriend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="משחק" Height="747.328" Width="839.983" WindowStartupLocation="CenterScreen" >
    
    <Grid Name="grdMain" Margin="0,0,0,-4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="6*" />
          
        </Grid.RowDefinitions>
        <Image x:Name="grdplr2" HorizontalAlignment="Left" Height="97" Margin="51,1,0,0" VerticalAlignment="Top" Width="138" Source="bin/Debug/Images/nikud.png" Grid.Row="1"/>
        <Grid Height="94" HorizontalAlignment="Left" Margin="34,8,0,0" x:Name="grdplr22" VerticalAlignment="Top" Width="190" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="61*"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="26*"/>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="56*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="44*"/>
            </Grid.ColumnDefinitions>
            <Image Height="43" HorizontalAlignment="Left" Margin="11,27,0,0" x:Name="image2" Stretch="Fill" VerticalAlignment="Top" Width="52" Source="/Hexxagon;component/bin/Debug/Images/whitediamond.png" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" />
            <Label Content="Label" Height="28" HorizontalAlignment="Left" Margin="8,-9,0,0" x:Name="lblplayer2" VerticalAlignment="Top" Grid.Column="3" />
