        </Grid>
        <Image x:Name="grdplr1" HorizontalAlignment="Left" Height="101" Margin="655,99,0,0" VerticalAlignment="Top" Width="140" Source="bin/Debug/Images/nikud.png" Grid.RowSpan="2"/>
        <Grid Height="91" HorizontalAlignment="Left" Margin="679,6,0,0" x:Name="grdplr11" VerticalAlignment="Top" Width="98" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="18"/>
                <RowDefinition Height="60.925"/>
                <RowDefinition Height="12.075"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="67*"/>
                <ColumnDefinition Width="55*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Image Height="54" HorizontalAlignment="Left" Margin="22,7,0,0" x:Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="45" Source="/Hexxagon;component/bin/Debug/Images/reddiamond.png" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" />
            <Label Content="3" HorizontalAlignment="Left" Margin="10,19.269,0,0" x:Name="lbl1" Target="{Binding}" UseLayoutRounding="False" Width="15.994" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" />
            <Label Content="Label" Height="28" HorizontalAlignment="Right" Margin="0,-13,1,0" x:Name="lblplayer1" VerticalAlignment="Top" FlowDirection="RightToLeft" Grid.Column="1" />
        </Grid>
        <Image x:Name="imgHint" HorizontalAlignment="Left" Height="62" Margin="354,17,0,0" VerticalAlignment="Top" Width="82" Source="/Hexxagon;component/bin/Debug/Images/רמז.png" MouseDown="Image_MouseDown_1" Cursor="Hand" ToolTip="רמז"/>
    </Grid>
